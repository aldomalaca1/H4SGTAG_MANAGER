<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hasgtagmanager">
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/hashtagmainicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/hashtagmainicon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HASGTAGMANAGER">
        <activity
            android:name=".activities.AddHashtagsActivity"
            android:exported="false"
            android:label="@string/Add_hashtags"
            android:theme="@style/Theme.HASGTAGMANAGER" />
        <activity
            android:name=".activities.DynamicHashtagQueryActivity"
            android:exported="false"
            android:label="@string/Hashtags_entries"
            android:theme="@style/Theme.HASGTAGMANAGER" />
        <activity
            android:name=".activities.AddGroupActivity"
            android:exported="false"
            android:label="@string/Add_group"
            android:theme="@style/Theme.HASGTAGMANAGER" />
        <activity
            android:name=".activities.DynamicGroupQueryActivity"
            android:exported="false"
            android:label="@string/Group_entries"
            android:theme="@style/Theme.HASGTAGMANAGER" />
        <activity
            android:name=".activities.DataBackupActivity"
            android:exported="false"
            android:label="@string/Backup_data"
            android:theme="@style/Theme.HASGTAGMANAGER" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>